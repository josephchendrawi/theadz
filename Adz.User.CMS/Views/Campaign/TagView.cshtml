@model Adz.User.CMS.Models.CampaignModel.Tag
@{
    ViewBag.Title = "Tag View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Kendo.Mvc.UI
<script src="@Url.Content("~/Scripts/jquery.fancybox.js")" type="text/javascript"></script>
<link rel="stylesheet" href="@Url.Content("~/Content/fancy/jquery.fancybox.css")">
<script type="text/javascript">
    $(document).ready(function () {
        @if (Model.LastAction != "5") {
            <text>changeverticalnav(10);</text>
        }
        else
        {
            <text>changeverticalnav(11);</text>
        }
        $(document).tooltip();
        $('.fancybox').fancybox();
    });
</script>

<div class="rightheader">
    <h1>Tag Information</h1>
    <div class="pagelink">
        <a href="#">Admin Portal</a> /
        <a href="@Url.Action("Tag", "Campaign")">Tag</a> /
        <a>Tag View</a>
    </div>
</div>

<div id="msgbox">
    @if (ViewBag.msg != null && ViewBag.msg != "")
    {
        if (ViewBag.msg == "a1")
        {
            <div class="alert alert-block alert-success">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Success!</h4>
                Tag successfully created.
            </div>
        }
        else if (ViewBag.msg == "a2")
        {
            <div class="alert alert-block alert-danger">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Error</h4>
                Create Tag failed.
            </div>
        }
        else if (ViewBag.msg == "e1")
        {
            <div class="alert alert-block alert-success">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Success!</h4>
                Tag successfully updated.
            </div>
        }
        else if (ViewBag.msg == "e2")
        {
            <div class="alert alert-block alert-danger">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Error</h4>
                Update Tag failed.
            </div>
        }
    }
</div>

<div class="rightcontent">
    <div class="rightrow">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>View Tag</h4><hr />
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Personal Information
                            </div>
                            <div class="panel-body">
                                <div class="leftcol">@Html.LabelFor(model => model.Name)</div>
                                <div class="rightcol">@Model.Name</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        @if (Model.LastAction != "5")
                        {
                            <a href="@Url.Action("TagEdit","Campaign")?TagId=@Model.TagId" class="k-button">Edit</a>
                            <a href="@Url.Action("Tag", "Campaign")" class="k-button">Back</a>
                        }
                        else
                        {
                            <a href="@Url.Action("TagArchive", "Campaign")" class="k-button">Back</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>