@model Adz.User.CMS.Models.DailyReportEmail
@{
    ViewBag.Title = "Daily Report Setting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        changeverticalnav(28);
        $(document).tooltip();
    });
</script>

<div class="rightheader">
    <h1>Daily Report Setting</h1>
    <div class="pagelink">
        <a href="#">Admin Portal</a> /
        <a>Setting</a> /
        <a>Daily Report</a>
    </div>
</div>

<div id="msgbox">
    @if (ViewBag.msg != null && ViewBag.msg != "")
    {
        if (ViewBag.msg == "a1")
        {
            <div class="alert alert-block alert-success">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Success!</h4>
                Daily Report Email successfully updated.
            </div>
        }
        else
        {
            <div class="alert alert-block alert-danger">
                <a class="close" data-dismiss="alert" href="#">X</a>
                <h4 class="alert-heading">Error</h4>
                @ViewBag.msg
            </div>
        }
    }
</div>

<div class="rightcontent">
    <div class="rightrow">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                    <div class="leftcol">@Html.LabelFor(model => model.Email)</div>
                    <div class="rightcol">@Html.TextBoxFor(m => m.Email)</div>
                        
                    <input class="btn btn-primary" type="submit" value="Submit" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>