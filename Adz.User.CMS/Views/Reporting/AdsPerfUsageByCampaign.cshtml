@model Adz.User.CMS.Models.ViewModels.AdsPerformanceUsageVM
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Ads History Detail</h3><br/>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Campaign Name</th>
                        <th>Date Time</th>
                        <th>User</th>
                        <th>Gender</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model.CampaignHistories)
                    {
                        <tr>
                            <td>@v.Campaign.Name</td>
                            <td>@v.DateTime</td>
                            <td>@v.User.Email</td>
                            <td>@v.Gender</td>
                            <td>@v.Latitude</td>
                            <td>@v.Longitude</td>
                            <td>@v.Action</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>