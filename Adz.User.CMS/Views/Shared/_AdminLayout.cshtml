                        <li class="sidebar-admin">
                            <a href="@Url.Action("Admin", "Admin")">
                                <i class="fa fa-male"></i> <span>Admin Information</span>
                            </a>
                        </li>
                        <li class="sidebar-admin">
                            <a href="@Url.Action("AdminRole", "Admin")">
