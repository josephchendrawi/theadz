                            </a>
                        </li>

                        <li class="sidebar-brand sidebar-user"><i class="fa fa-users"></i> <span>User Management</span></li>
                        <li class="sidebar-user">
                            <a href="@Url.Action("User","User")">
                                <i class="fa fa-user"></i> <span>User Information</span>
                            </a>
                        </li>
                        
                        @*<li>
                            <a href="#">
                                <i class="fa fa-archive"></i> <span>User Archive</span>
                            </a>
                        </li>*@
                        
                        <li class="sidebar-brand sidebar-merchant"><i class="fa fa-dollar"></i> <span>Merchant Management</span></li>
                        <li class="sidebar-merchant">
                            <a href="@Url.Action("Merchant","Merchant")">
                                <i class="fa fa-user"></i> <span>Merchant Information</span>
                            </a>
                        </li>
                        <li class="sidebar-merchant">
                            <a href="@Url.Action("MerchantArchive", "Merchant")">
                                <i class="fa fa-archive"></i> <span>Merchant Archive</span>
                            </a>
                        </li>
                        
                        <li class="sidebar-brand sidebar-campaign"><i class="fa fa-flag"></i> <span>Campaign Management</span></li>
