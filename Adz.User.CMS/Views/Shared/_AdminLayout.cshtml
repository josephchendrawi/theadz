    <script src="@Url.Content("~/Scripts/kendo/kendo.aspnetmvc.min.js")"></script>
    <script src="~/Scripts/kendo/kendo.angular.min.js"></script>

    <script type="text/javascript">
        function changeverticalnav(i) {
            var list = document.getElementById('sidebar-nav').children[0];
            list.children[i].classList.add("active");
        }
    </script>

    @{
        var ViewUnAuth = Adz.BLL.Lib.AdminService.GetRoleViewAuth().Result;
    }

    @foreach (var v in ViewUnAuth)
    {
        <style>
            .sidebar-@v.ToLower()
            {
                display: none !important;
            }
        </style>
    }
</head>
<body>
    <div id="container">
        <div class="navbar navbar-top-custom navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">The Adz</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @*<li><a href="#"><i class="glyphicon glyphicon-envelope"></i></a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-tasks"></i></a></li>*@
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i>
                                <span>@Adz.Helper.currAdminName</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogOut", "Admin")">
                                <span>Log Out</span>
                            </a>
                        </li>
                    </ul>

